            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "set charset UTF-8"
                }
            ],
            "preLaunchTask": "FTXUI C/C++: g++.exe build active file",
